<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cancel" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="190dp"
                    android:src="@drawable/ic_baseline_favorite_border_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Price"
                        android:textColor="#FF1493"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Qty:"
                        android:textSize="25sp" />

                    <Button


                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/arrow"

                        android:text="-"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/etquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="1"
                        android:textColor="#D3D3D3"
                        android:textSize="20sp" />

                    <Button


                        android:layout_width="28dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/arrow"

                        android:text="+"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="0.0 (0 reviews)"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/sold" />

                    <TextView
                        android:layout_width="99dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="Sold By: Foreveryng"
                        android:textSize="15sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="51dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/order" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:text="Order By Phone"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/desc" />

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </LinearLayout>

            <TextView
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Brunettes, meet your match. A uniquely tinted dry shampoo that leaves hair feeling clean, and blen.."
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:padding="5dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Price"
                    android:textColor="#FF1493"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Total Price"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="225dp"
                android:layout_height="76dp"

                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cart"
                    android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
                    android:paddingLeft="20dp"
                    android:text="Add to Cart"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</ScrollView>